.weui-cell:before {
  left: 0;
}

.container {
  display: flex;
  flex-direction: column;
  background: white;
  padding: 30px 0;
}

.container-top {
  display: flex;
  flex-direction: row;
}

.container-top view {
  text-align: center;
  flex: 1;
  display: flex;
  flex-direction: column;
  color: #888;
}

.container-top view>text:first-of-type {
  font-size: 16px;
  color: #999;
}

.container-top view>text:last-of-type {
  font-size: 32px;
  color: #000;
}

.myweui-btn {
  background: white;
  color: #f60;
  border: 1px solid #f60;
  border-radius: 20px;
  font-size: 14px;
  width: 178px;
  height: 38px;
  margin-top: 25px;
}

.myweui-btn:after {
  content: none;
}

.cell__bd-title {
  font-size: 16px;
  color: #333;
}

.cell__bd-dec {
  font-size: 14px;
  color: #666;
  margin-top: 5px;
}

.myweui-cells image {
  margin-right: 5px;
  vertical-align: middle;
  width: 32px;
  height: 32px;
}

.myweui-cells button {
  width: 70px;
  padding: 0;
}

button[type="warn"] {
  background: #f60;
}

button[type="warn"]:after {
  border-color: #f60;
}

button[type="warn"].mymini-btn:after {
  border-color: #ccc;
}

.rules {
  margin: 70px 15px 0;
  font-size: 14px;
}

.rule-list {
  padding: 10px 0;
}

.rule-list text {
  display: block;
  line-height: 25px;
  color: #666;
}
