.container {
  height: 100%;
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  line-height: 60rpx;
} 
.myweui-cells {
  position: relative;
  margin-top:0px;
  background-color: #FFFFFF;
  line-height: 1.41176471;
  font-size: 17px;
}
.myweui-cells:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid white;
  color: #D9D9D9;
}
.myweui-cells:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid white;
  color: #D9D9D9;
}
