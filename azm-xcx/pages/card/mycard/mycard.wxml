<!--mycard.wxml-->
<view class="page">
    <view class="main">
        <view class="weui-cell">
            <view class="weui-cell__hd">
                <image src="{{personData.picurl}}" alt="" style="width: 50px;height:50px;display: block;border-radius: 8px;margin-right: 10px;"/>
            </view>
            <view class="weui-cell__bd">
                <view style="font-weight: 600;">{{personData.name}}</view>
                <view style="font-size: 13px;color: #888888;">{{personData.zhiwei}}</view>
            </view>
        </view>
        <view class="weui-cells" style="margin-top: 0;">
            <view class="weui-cell">
                <view class="weui-cell__bd">手机号</view>
                <view class="weui-cell__ft">{{personData.phone}}</view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">公司</view>
                <view class="weui-cell__ft">{{personData.belongCom}}</view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">微信</view>
                <view class="weui-cell__ft">{{personData.wechar}}</view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">QQ</view>
                <view class="weui-cell__ft">{{personData.qq}}</view>
            </view>
        </view>

        <view class="btm">
          <view class="ewm">
            <image src="{{personData.picurlXcxQr}}"/>
        </view>
        <view class="word">
            <view>长按识别小程序码</view>
            <view>查看我的完整名片</view>
            <view style="font-size:13px;color:#888;padding-top:15px;">截图保存</view>
            <view style="font-size:13px;color:#888;">分享图片到朋友圈</view>
        </view>
        </view>
        
    </view>
</view>
