Page{
   background: rgba(0, 0, 0, .8);
  max-height: 100%;
  width:100%;
}
.page {
  padding: 50px 20px 0;
  box-sizing: border-box;
}

.main {
  background: white;
  border-radius: 5px;
}
.btm{
  display: flex;
  flex-direction: row;
  padding: 20px 0 20px 10px;
}
.ewm{
  flex: 1;
}
.ewm image{
  width: 150px;
  height: 150px;
  display: block;
  margin: auto;
}
.word{
  text-align: center;
  flex: 1;
  font-size: 14px;
  line-height: 26px;
  padding-top: 15px;
}