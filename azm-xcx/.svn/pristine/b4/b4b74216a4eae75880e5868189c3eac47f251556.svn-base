<view style="background-color: #212121;width:{{width}}px;height:{{height}}px;">
  <view style="height:{{top}}px;width:100%;"></view>
  <view style="width:{{width}}px;height:auto;">
    <image bindtap="checkImg" id="{{url}}" bindload="setImgHeight" src="{{url}}" style="width:{{width}}px;" mode="widthFix"></image>
  </view>
</view>
