/* openvip.wxss */

.swiper {
  height: 300rpx;
  width: 100%; 
}
.swiper image {
  height: 100%;
  width: 100%;
}
.mid{
  padding: 0px 30rpx; 
}
.mid-tit{
  text-indent: 20rpx;
  height: 84rpx;
  font-size: 30rpx;
  line-height: 84rpx;
  font-weight: 600;
  display: block;
}

.leftNav {  
  float: left;  
 
}   
.goodsList {  
  float: right;  
}    
.goodsTitle {  
  min-width: 120rpx;  
  text-align: center;  
 
  float: left;  
  font-size: 30rpx;  
  position: relative;
  margin-right: 20rpx;
  margin-bottom: 24rpx;
 margin-left: 20rpx; 
}  
 .goodsTitle>.money{
   position: absolute;
   top: 2rpx;
   text-align: center;
   line-height: 180rpx;
   width: 100%;
 }   
.goodsTitle>image {  
  width: 300rpx;  
  height: 180rpx;  
}  
.moneya{
  font-size: 50rpx;
  font-weight: 600;
}
.mid-time{
  font-size: 30rpx;
  font-weight: 600;
}
.goodsTitle:first-child .money{  
   line-height: 150rpx;
} 
.say{
  position: absolute;
  top: 110rpx;
  text-align: center;
  width: 100%;
  font-size: 22rpx;
} 
.paybutton{
  margin-top: 10rpx;
  height: 144rpx;
}
.paybutton image{
  width: 100%;
  height: 100%;
}
.mitt{
  margin-top: 24rpx;
  margin-bottom: 54rpx;
  font-size: 28rpx;
  text-align: center;
}

.footer{
  background-color: #f8e0d0;
  padding: 50rpx 50rpx 150rpx;
}
.foot>.foota{
  float: left;

}
.footb{
  width: 28%;
  color: #f57a42;
  overflow: hidden;
  letter-spacing: 0rpx;
}
.footd{
  width: 44%;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  color: #f57a42;
  letter-spacing: 2rpx;
}
.tuiguang{
  margin-top: 28rpx;
  height: 406rpx;
}
.tuiguang image{
  width: 100%;
  height: 100%;
  
}
.icon{
  position: relative;
}
.icon image{
  width: 100%;
  height: 120rpx;
}
.icon .word{
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  letter-spacing:2rpx;
  color: #2b2d3a;
  
}
.icon>.worda{
  width: 70%; 
  position: absolute;
  font-size: 30rpx;
  right:30px;
  top:40px;
  color: #626574;
}
@media only screen and (min-width:412px) and (max-width:430px) {
.icon>.worda{
  width: 70%; 
  position: absolute;
  font-size: 30rpx;
  right:30px;
  top:44px;
}
} 
@media only screen and (min-width:319px) and (max-height:568px) {
.icon>.worda{
 width:70%;
position:absolute;
font-size:30rpx;
right:28px;
top:35px;
}
} 
